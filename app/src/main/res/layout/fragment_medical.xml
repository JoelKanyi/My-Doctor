<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.mydoctor.ui.fragments.MedicalProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MedicalBioDataActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family section"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/next_of_kin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Of Kin" />

        <TextView
            android:id="@+id/gfname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardian First Name" />
        <TextView
            android:id="@+id/glname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardians Last Name" />

        <TextView
            android:id="@+id/g_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardian ID" />

        <TextView
            android:id="@+id/guardian_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardians Phone Number" />

        <TextView
            android:id="@+id/G_locality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardians Locality" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical Data"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>



        />
        <TextView
            android:id="@+id/blood_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group" />

        <TextView
            android:id="@+id/bloodpressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood pressure" />

        <TextView
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimate Height in inches" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight" />

        <TextView
            android:id="@+id/existing_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Existing Medical Condition" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIV Status"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/mp_back"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="Quit"
                android:textColor="@android:color/white"
                tools:ignore="InvalidId" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>